<header class="header">
    <div class="header-top">
        <!-- Menú de navegación -->
        <button class="menu-toggle" aria-label="Abrir menú">☰</button>
        <a href="/" class="logo">
            <img src="/images/logo.png" alt="BumBox Logo">
        </a>

        <!-- Redes Sociales -->
        <div class="social-links">
            {{#each socialLinks}}
                <a href="{{href}}" target="_blank" aria-label="{{alt}}">
                    <img src="{{icon}}" alt="{{alt}}">
                </a>
            {{/each}}
        </div>
    </div>

    <!-- Barra de tendencias -->
    <nav class="trending-bar">
        <span class="trending-title">Tendencias:</span>
        {{#each hotTopics}}
            <a href="{{href}}">{{text}}</a> |
        {{/each}}
    </nav>

    <!-- Menú principal -->
    <nav class="nav-bar">
        <ul class="nav-links">
            {{#each navigation.[0].items}}
                <li><a href="{{href}}" class="{{#if isCurrent}}active{{/if}}">{{text}}</a></li>
            {{/each}}
        </ul>
    </nav>
</header>

