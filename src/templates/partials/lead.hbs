{{!-- <p>📌 Debug: ¿Existe lead? {{#if lead}} ✅ Sí {{else}} ❌ No {{/if}}</p> --}}

<section class="lead">
    <div class="carousel">
        {{#each lead}}
        <div class="carousel-item {{#if @first}}active{{/if}}">
            {{#if image.src}}
                <img class="carousel-image" src="{{image.src}}" alt="{{alt}}" width="{{image.width}}" height="{{image.height}}">
            {{/if}}

            {{#if video.src}}
                <iframe class="carousel-video" src="{{video.src}}" frameborder="0" allowfullscreen></iframe>
            {{/if}}
        </div>
        {{/each}}
    </div>
</section>
